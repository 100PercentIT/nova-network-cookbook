[DEFAULT]
debug = <%= @quantum_debug %>
root_helper = sudo /usr/bin/quantum-rootwrap /etc/quantum/rootwrap.conf
external_network_bridge = <%= @quantum_external_bridge %>

auth_url = <%= @keystone_protocol %>://<%= @keystone_api_ipaddress %>:<%= @keystone_admin_port %>/<%= @keystone_path %>
auth_region = <%= @keystone_region %>
admin_tenant_name = <%= @service_tenant_name %>
admin_user = <%= @service_user %>
admin_password = <%= @service_pass %>
metadata_ip = <%= @nova_metadata_ip %>
metadata_port = 8775
use_namespaces = <%= @quantum_namespace %>

<% if @quantum_plugin == "ovs" %>
# OVS
interface_driver = quantum.agent.linux.interface.OVSInterfaceDriver
<% end %>
